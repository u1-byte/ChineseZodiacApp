<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:translationZ="10dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/row_item"
        app:layout_constraintEnd_toStartOf="@+id/row_item"
        app:layout_constraintStart_toStartOf="@+id/row_item"
        app:layout_constraintTop_toTopOf="@+id/row_item"
        tools:src="@drawable/mini_dragon"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/row_item"
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/dark_red"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="5dp"
        style="@style/ListItem"
        app:layout_constraintBottom_toBottomOf="@+id/row_item"
        app:layout_constraintEnd_toEndOf="@+id/row_item"
        app:layout_constraintStart_toStartOf="@+id/row_item"
        app:layout_constraintTop_toTopOf="@+id/row_item"
        tools:text="Zodiac"/>

</androidx.constraintlayout.widget.ConstraintLayout>